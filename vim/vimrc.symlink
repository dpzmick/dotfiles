" haskell
" Plug 'dag/vim2hs'
" Plug 'eagletmt/neco-ghc'
" Plug 'bitc/hdevtools'
" Plug 'lambdatoast/elm.vim'

" Plug 'dpzmick/vim-dvtm-navigator'
Plug 'christoomey/vim-tmux-navigator'
